<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <ImageButton
        android:id="@+id/button_back_pc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_description_listview_home"
        android:src="@drawable/button_back" />

    <ImageButton
        android:id="@+id/button_home_pc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:contentDescription="@string/content_description_listview_home"
        android:src="@drawable/button_home" />

    <ImageButton
        android:id="@+id/button_refresh_pc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:layout_weight="1"
		android:background="@android:color/transparent"
        android:contentDescription="@string/content_description_listview_home"
        android:src="@drawable/button_refresh" />

</LinearLayout>